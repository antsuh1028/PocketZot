{
  "manifest_version": 3,
  "name": "PocketZot",
  "version": "0.1.0",
  "description": "A lightweight Chrome extension starter for PocketZot.",
  "action": {
    "default_title": "PocketZot",
    "default_popup": "dist/pocket_zot.html"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*"],

"content_scripts": [{
  "matches": ["http://*/*", "https://*/*"],
  "js": [
    "anteaterchar/physics.js",
    "anteaterchar/stateMachine.js",
    "anteaterchar/sprite.js",
    "anteaterchar/dragController.js",
    "anteaterchar/anteater.js",
    "anteaterchar/messageListener.js"
  ],
  "run_at": "document_idle"
}],

"web_accessible_resources": [{
  "resources": ["anteaterchar/assets/*"],
  "matches": ["<all_urls>"]
}]

}