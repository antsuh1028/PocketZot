{
  "manifest_version": 3,
  "name": "PocketZot",
  "version": "0.1.0",
  "description": "A lightweight Chrome extension starter for PocketZot.",
  "action": {
    "default_title": "PocketZot",
    "default_popup": "dist/pocket_zot.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>", "http://localhost:8000/*","http://127.0.0.1:8000/*"],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://*.perplexity.ai/*"
      ],
      "js": [
        "dist/anteaterchar/physics.js",
        "dist/anteaterchar/stateMachine.js",
        "dist/anteaterchar/sprite.js",
        "dist/anteaterchar/dragController.js",
        "dist/anteaterchar/anteater.js",
        "dist/anteaterchar/messageListener.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/anteaterchar/assets/*", "dist/anteaterchar/assets/+1Ant.png", "dist/anteaterchar/assets/neg1Ant.png", "dist/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
